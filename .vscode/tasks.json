{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build FRED Framework",
			"type": "shell",
			"command": "make",
			"group": "build",
			"args": ["build-fred"],
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Run FRED Simulation (CLI)",
			"type": "shell",
			"command": "make",
			"group": "test",
			"args": ["run-fred"]
		},
		{
			"label": "Clean FRED Output",
			"type": "shell",
			"command": "make",
			"args": ["clean"]
		}
	]
}