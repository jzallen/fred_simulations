# Local Development Configuration
# Copy to .env and customize for local development

# Database Configuration (overrides AWS Parameter Store)
DATABASE_URL=postgresql://epistemix_user:epistemix_password@localhost:5432/epistemix_db

# Or use individual parameters
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=epistemix_db
# DATABASE_USER=epistemix_user
# DATABASE_PASSWORD=epistemix_password

# AWS Configuration
AWS_REGION=us-east-1
S3_UPLOAD_BUCKET=epistemix-uploads-dev

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
LOG_LEVEL=INFO

# Database Pool Settings (PostgreSQL)
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Environment (determines which Parameter Store path to use)
# Options: dev, staging, production
ENVIRONMENT=dev
